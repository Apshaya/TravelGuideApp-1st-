<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutus"
    android:background="@drawable/kkk">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:text="About us"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="353dp"
        android:layout_height="288dp"
        android:text="Welcome to Traveler Guider, your ultimate travel companion! Our app is designed to simplify your travel planning and enhance your journey. Discover destinations, create personalized itineraries, get local recommendations, and navigate like a pro with our interactive maps. Stay updated with real-time information and connect with a vibrant traveler community. Your safety is our priority, and we provide essential tips and emergency contacts. Experience the joy of seamless travel with Traveler Guider - download our app now!"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.349" />

</androidx.constraintlayout.widget.ConstraintLayout>